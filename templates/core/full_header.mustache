{{!
    @template theme_classic/header

    This template renders the header.

    Example context (json):
    {
        "contextheader": "context_header_html",
        "hasnavbar": false,
        "navbar": "navbar_if_available",
        "courseheader": "course_header_html"
    }
}}
<header id="page-header" class="row">

    {{{headerimage}}}

    {{#hasoverlayimage}}
        <div class="headeroverlay"></div>
    {{/hasoverlayimage}}
    
    {{#hasbrandlogo}}
        <div class="brandlogo">
            <img src="{{{brandlogourl}}}" class="img-fluid" alt="Responsive image">
        </div>
    {{/hasbrandlogo}}

    <div class="col-12 pt-1 pb-1">
        <div class="card {{^contextheader}}border-0 bg-transparent{{/contextheader}}">
            <div class="card-body {{^contextheader}}p-2{{/contextheader}}">
                <div class="d-flex"> 
                    
                    {{#hasnavbar}}
                    <div id="page-navbar">
                        {{{navbar}}}
                    </div>
                    {{/hasnavbar}}

                    <div id="course-header">
                        {{{courseheader}}}                    
                    </div>

                </div>

                <div class="d-flex flex-wrap align-items-center">
                    {{#contextheader}}
                    <div class="mr-auto">
                    {{{contextheader}}}
                    </div>
                    {{/contextheader}}

                    

                    <div id="course-header">
                        {{{courseheader}}}
                    </div>

                    <div class="header-actions-container flex-shrink-0" data-region="header-actions-container">
                        {{#headeractions}}
                            <div class="header-action ml-2">{{{.}}}</div>
                        {{/headeractions}}
                    </div>
                </div>

                <div class="ml-auto d-flex">
                    {{{pageheadingbutton}}}
                </div>
                
            </div>

            <div class="roleswitch">
                {{{roleswitch}}} {{{loginas}}}
            </div>

        </div>
    </div>

    {{#headerlinks}}
        <div class="headerlinks">
            {{#headerlinksdata}}
                {{#status}}
                <a href="{{{url}}}" title="{{{title}}}" class="headerlink"><i class="fa {{{icon}}}"></i> {{{title}}}</a>
                {{/status}}
            {{/headerlinksdata}}
        </div>
    {{/headerlinks}}

</header>